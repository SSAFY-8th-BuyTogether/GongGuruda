<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:id="@+id/fragment_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:text="회원가입"
            android:textColor="@color/mainColor"
            android:textSize="24sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/black_60"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:text="유저님의 회원정보를\입력해주세요."/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/fragment_title_layout"
        app:layout_constraintBottom_toTopOf="@id/btn_next"
        android:clipToPadding="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="이름"
                android:textSize="14sp"
                android:textColor="@color/black_gray"
                android:fontFamily="@font/notosanskr_regular_hestia" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="false"
                app:counterMaxLength="10">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:imeOptions="actionNext"
                    android:hint="이름을 입력해주세요. (ex.홍길동)"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/tv_name_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:paddingLeft="8dp"
                android:textColor="@color/pinkish_orange"
                android:fontFamily="@font/notosanskr_regular_hestia"
                android:text="" />
            <TextView
                android:id="@+id/tv_BirthInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingLeft="8dp"
                android:text="생년월일(8자리)"
                android:textSize="14sp"
                android:textColor="@color/black_gray"
                android:fontFamily="@font/notosanskr_regular_hestia" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="false"
                app:counterMaxLength="8">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_birthInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:maxLength="8"
                    android:imeOptions="actionNext"
                    android:hint="생년월일을 입력해주세요. (ex.20000101)"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/tv_birthInfo_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:paddingLeft="8dp"
                android:textColor="@color/pinkish_orange"
                android:fontFamily="@font/notosanskr_regular_hestia"
                android:text=""/>
            <TextView
                android:id="@+id/tv_smsInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingLeft="8dp"
                android:text="휴대폰 번호"
                android:textSize="14sp"
                android:textColor="@color/black_gray"
                android:fontFamily="@font/notosanskr_regular_hestia" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="false"
                app:counterMaxLength="11">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_smsInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:maxLength="11"
                    android:imeOptions="actionDone"
                    android:hint="'-'없이 휴대폰번호를 입력해주세요."
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/tv_smsInfo_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:paddingLeft="8dp"
                android:textColor="@color/pinkish_orange"
                android:fontFamily="@font/notosanskr_regular_hestia"
                android:text=""/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="다음"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosanskr_bold_hestia"
        style="@style/Widget.MaterialComponents.Button"
        app:cornerRadius="5dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
