<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_address_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@color/white"
    android:padding="16dp"
    android:layout_marginBottom="2dp"
    android:focusable="true">
    <TextView
        android:id="@+id/list_item_address_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="@color/white"
        android:fontFamily="@font/notosanskr_regular_hestia"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@id/list_item_address_b_v1"/>
    <TextView
        android:id="@+id/list_item_address_jibun_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도로명"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosanskr_regular_hestia"
        android:background="@color/mainColor_light"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/list_item_address_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/list_item_address_jibun_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosanskr_regular_hestia"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@id/list_item_address_jibun_title"
        app:layout_constraintTop_toTopOf="@id/list_item_address_jibun_title"
        app:layout_constraintBottom_toBottomOf="@id/list_item_address_jibun_title"
        app:layout_constraintRight_toRightOf="@id/list_item_address_b_v1"
        />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/list_item_address_b_v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:barrierDirection="left"
        app:barrierMargin="-10dp"
        app:constraint_referenced_ids="list_item_address_arrow"/>
    <ImageView
        android:id="@+id/list_item_address_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/ic_right_arrow_gray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>