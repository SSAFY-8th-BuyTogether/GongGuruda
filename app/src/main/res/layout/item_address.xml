<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_address_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@color/white"
    android:padding="16dp"
    android:layout_marginBottom="2dp"
    android:focusable="true">
    <TextView
        android:id="@+id/tv_address_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주소"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosanskr_regular_hestia"
        android:background="@color/mainColor_light"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:padding="4dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_address_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="주소 값입니다."
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/notosanskr_regular_hestia"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@id/tv_address_comment"
        app:layout_constraintTop_toTopOf="@id/tv_address_comment"
        app:layout_constraintBottom_toBottomOf="@id/tv_address_comment"
        app:layout_constraintRight_toRightOf="@id/barrier"
        />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:barrierDirection="left"
        app:barrierMargin="-10dp"
        app:constraint_referenced_ids="btn_address_item_delete"/>
    <ImageView
        android:id="@+id/btn_address_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/ic_remove_gray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>